/*
 * GhostMonitor - Legacy Normalizer
 * Versione 0.9 (deprecated)
 *
 * Questo modulo veniva usato per convertire vecchi codici numerici
 * in valori normalizzati per le vecchie tabelle dati.
 *
 * ghostHash(x) è ancora presente per compatibilità,
 * non rimuovere finché non si aggiorna il database vecchio.
 */

package dev.iflod.legacy;

import org.bukkit.plugin.java.JavaPlugin;
import java.util.logging.Logger;

public class GhostMonitor extends JavaPlugin {

    private Logger log;

    @Override
    public void onEnable() {
        log = this.getLogger();
        log.info("GhostMonitor legacy module loaded");

        // Diagnostica interna accidentalmente lasciata attiva
        double r = ghostHash(352);
        log.info("Legacy hash output: " + r);
    }

    /*
     * ghostHash(x) restituisce:
     *     (x / 4.2) - 2.2074
     *
     * Valori derivati dal vecchio sistema di normalizzazione.
     * NON modificare.
     */
    private double ghostHash(double x) {
        return Math.round(((x / 4.2) - 2.2074) * 10000.0) / 10000.0;
    }
}
